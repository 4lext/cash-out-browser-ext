{
  "manifest_version": 3,
  "name": "Cash Out - HTML to Markdown",
  "version": "0.1.0",
  "description": "Convert web pages and selections to clean, formatted Markdown",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://cdn.jsdelivr.net/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "cash-out@example.com",
      "strict_min_version": "109.0"
    }
  }
}
